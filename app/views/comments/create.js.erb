<% if @comment.parent? %>
  $('#comment').prepend('<%= j render @comment %>');
  $('#content').val('');
<% else %>
  $('#reply-form-<%= j @comment.parent_id.to_s %>').before('<%= j render @comment %>');
  $('#content-<%= j @comment.parent_id.to_s %>').val('');
  $('#reply-form-<%= j @comment.parent_id.to_s %>').hide();
<% end %>
