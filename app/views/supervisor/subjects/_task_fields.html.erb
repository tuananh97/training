<div class="nested-fields task">
  <div class="row">
    <div class="col-md-3">
      <%= f.label :name, t(".task"), class:"required" %>
      <%= link_to_remove_association f, data: {confirm: t(".confirm_delete")} do %>
        <i class="fa fa-trash" data-toogle="tooltip"
          title="<%= t ('.del_title') %>"></i>
      <% end %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :name, class: "form-group form-control", required: true %>
    </div>

    <div class="col-md-3">
      <%= f.label :description, class:"required" %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :content, class: "form-group form-control", required: true %>
    </div>

    <div class="col-md-3">
      <%= f.label :description, t(".content_task"), class:"required" %>
    </div>
    <div class="col-md-9">
      <%= f.text_area :description, class: "form-group form-control", required: true %>
    </div>
  </div>
</div>
