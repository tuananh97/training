<div class="nested-fields task">
  <div class="row">
    <div class="col-md-3">
      <%= f.label :name, t(".task"), class:"required" %>
      <%= link_to_remove_association f, data: {confirm: t(".confirm_delete")} do %>
        <i class="fa fa-trash" data-toogle="tooltip"
          title="<%= t ('.del_title') %>"></i>
      <% end %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :name, class: "form-group form-control", required: true %>
    </div>

    <div class="col-md-3">
      <%= f.label :description, class:"required" %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :description, class: "form-group form-control", required: true %>
    </div>

    <div class="col-md-3">
      <%= f.label :content, t(".content_task"), class:"required" %>
    </div>
    <div class="col-md-9">
      <%= f.cktext_area :content, class: "form-group form-control", required: true %>
    </div>

    <div class="col-md-3">
      <%= f.label :video, t(".video") %>
    </div>
    <div class="col-md-9">
      <%= f.hidden_field :video_cache %>
      <%= f.file_field :video, accept: "video/mp4,video/mkv,video/avi" %>
    </div>
  </div>
</div>
<% @courses.each do |course| %>
  <div class="col-md-2 card-size">
    <div class="card">
      <%= image_tag get_image(course), class:"card-img-top", tyle:"width:100%" %>
      <div class="card-body">
        <h3 class="title-course"><%= course.name %></h3>
        <span class="short-description"><%= course.description %></span>
      </div>
    </div>
    <div class="card-footer text-center">
      <%= link_to t(".view_details"), course_path(course), class:"btn btn-primary" %>
    </div>
  </div>
<% end %>

