<% provide :title, t(".title") %>

<div class="content-wrapper">
  <h3 class="panel-title"> <%= t ".title" %></h3>
  <div class="row">
    <div class="col-md-6" id="paginator">
      <%= paginate @exams, theme: "twitter-bootstrap-4" %>
    </div>
    <div class="col-md-6">
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th><%= t ".exam" %></th>
        <th><%= t ".subject" %></th>
        <th><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @exams.each_with_index do |course, index| %>
        <tr>
          <td><%= page_index params[:page], index, 5 %></td>
          <td><%= course.title %>
          </td>
          <td><%= course.subject.name %>
          </td>
          <td>
            <%= link_to supervisor_exam_path(course) do %>
             <i class="fa fa-leanpub" data-toogle="tooltip"
                title="<%= t '.show' %>"></i>
            <% end %>&nbsp;&nbsp;
            <%= link_to supervisor_exam_path(course), method: :delete,
              data: {confirm: t(".confirm")} do %>
             <i class="fa fa-trash" data-toogle="tooltip"
                title="<%= t '.delete' %>"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
