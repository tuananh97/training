<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel"><%= t ".create_exam" %></h4>
  <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
</div>
<%= form_for [:supervisor, @exam] do |f| %>
  <div class="modal-body">
    <%= f.hidden_field :subject_id, value: @subject.id %>
    <div class="form-group">
      <%= f.label :title, t(".title"), class: "required" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div align="right" class="error-messages-devise" >
      <%= @exam.errors.full_messages_for(:title).first %>
    </div>
    <div class="form-group">
      <%= f.label :number_question, t(".number_question"), class: "required" %>
      <%= f.text_field :number_question, class: "form-control" %>
    </div>
    <div align="right" class="error-messages-devise" >
      <%= @exam.errors.full_messages_for(:number_question).first %>
    </div>
  </div>
  <div class="modal-footer">
    <div class="actions form-group">
      <%= f.submit t(".create") , class: "btn btn-primary",remote: true %>
    </div>
  </div>
<% end %>
