<% if flash[:error].present? %>
  $('.global-flash').html('<%= j render "layouts/flash", notice: flash[:error] %>');
  $('.global-modal-content').html('<%= j render "edit" %>');
  <% flash.discard %>
<% else %>
  $('.global-flash').html('<%= j render "layouts/flash", notice: flash[:success] %>');
  $("#modal-window").hide();
  window.location.reload();
<% end %>
