<div class="content-wrapper">
  <%= form_for [:supervisor, @course] do |f| %>
    <div class="col-md-8 error">
      <%= render "shared/error", object: @course %>
    </div>
    <div class="col-md-8 course">
      <h3><%= t ".create_course" %></h3>
      <%= render "form_course", course: f %>
    </div>
    <div class="col-md-8 subjects">
      <h4><%= t ".create_subject" %></h4>
      <%= f.fields_for :subjects do |subject| %>
        <%= render "subject_fields", f: subject %>
      <% end %>
      <p><%= link_to_add_association f, :subjects, class:"btn btn-info" do %>
        <i class="fa fa-plus"></i>&nbsp;<%= t ".add_subject" %>
      <% end %></p>
    </div>
    <div class="col-md-12 submit-course">
      <%= f.submit t(".create"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
