<%= provide :title, t(".home") %>

<div class="row content-wrapper" id="info-course">
  <% @courses.each do |course| %>
    <div class="col-md-3 card-size">
      <div class="card">
        <img class="card-img-top" src="/assets/course.png" tyle="width:100%">
        <div class="card-body">
          <h3 class="title-course"><%= course.name %></h3>
          <span class="short-description"><%= course.description %></span>
        </div>
        <div class="card-footer">
          <%= link_to t(".learn"), root_path, class:"btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
