<%= provide :title, t(".home") %>

<div class="row content-wrapper" id="info-course">
  <% @courses.each do |course| %>
    <div class="col-md-2 card-size">
      <div class="card">
        <%= image_tag get_image(course), class:"card-img-top", tyle:"width:100%" %>
        <div class="card-body">
          <h3 class="title-course"><%= course.name %></h3>
          <span class="short-description"><%= course.description %></span>
        </div>
        <div class="card-footer text-center">
          <%= link_to t(".view_details"), root_path, class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @courses, theme: "twitter-bootstrap-4" %>
</div>
