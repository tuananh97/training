<div class="content-wrapper">
  <div class="row">
    <div class="col-md-12" style="text-align: center">
      <h3><strong><%= @course.name %></strong></h3>
      <p><%= training_time(@course) %></p>
      <p><h5><%= link_to t(".back"), learn_path(@course) %></h5></p>
    </div>
    <div class="row col-md-12">
      <% @course.subjects.each_with_index do |subject, index| %>
        <div class="col-md-6">
          <strong><%= index + 1 %>:&nbsp;<%= subject.name %></strong>
          <div class="progress">
            <div class="progress-bar" id="progress_subject_<%= index %>"
              role="progressbar" aria-valuemin="0" aria-valuemax="100">
            </div>
          </div>
          <div>
            <label><%= t ".description" %>: <%= subject.description %></label>
          </div>
        </div>
        <%= render partial: "learns/task_exam_progress", locals:{trainee: current_user, subject: subject} %>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_tag render partial: "learns/progress", locals:{trainee: current_user} , formats: :js %>
