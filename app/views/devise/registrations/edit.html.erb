<div class="container">
  <div class="col-md-8" id="edit-profile">
    <h2><%= t ".edit", name: resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t ".waiting", email: resource.unconfirmed_email %></div>
      <% end %>
      <div class="row">
        <div class="col-md-6">
          <div class="field form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: t(".email"), class:"form-control" %>
            <div align="right" class="error-messages-devise" >
              <%= resource.errors.full_messages_for(:email).first %>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, autocomplete: t(".name"), class:"form-control"  %>
            <div align="right" class="error-messages-devise" >
              <%= resource.errors.full_messages_for(:name).first %>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: t(".new-password"), class:"form-control" %>
            <div align="right" class="error-messages-devise" >
              <%= resource.errors.full_messages_for(:password).first %>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: t(".new-password"), class:"form-control" %>
            <div align="right" class="error-messages-devise" >
              <%= resource.errors.full_messages_for(:password_confirmation).first %>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="field form-group">
            <%= f.label :phone %>
            <%= f.text_field :phone, autofocus: true, autocomplete: t(".phone"), class:"form-control" %>
            <div align="right" class="error-messages-devise" >
              <%= resource.errors.full_messages_for(:phone).first %>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :address %>
            <%= f.text_field :address, autofocus: true, autocomplete: t(".address"), class:"form-control" %>
            <div align="right" class="error-messages-devise" >
              <%= resource.errors.full_messages_for(:address).first %>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :avatar %>
            <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", autofocus: true %>
            <div align="right" class="error-messages-devise" >
              <%= resource.errors.full_messages_for(:avatar).first %>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :current_password %>
            <%= f.password_field :current_password, autocomplete: t(".current-password"), class:"form-control" %>
            <div align="right" class="error-messages-devise" >
              <%= resource.errors.full_messages_for(:current_password).first %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="actions form-group">
            <%= f.submit t(".update"), class:"btn btn-success" %>
          </div>
        </div>
    <% end %>
        <div class="col-md-6">
          <%= link_to t(".back"), :back, class:"btn btn-primary" %>
        </div>
      </div>
  </div>
</div>
