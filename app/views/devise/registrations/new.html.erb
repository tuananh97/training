<% provide :title, t(".sign_up") %>
<h3 class="title"><%= t ".sign_up" %></h3>

<div class="content-wrapper">
  <div class="row">
    <div class="login-form col-md-4 offset-md-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <label><%= t(".email") %>
            <span class="validate-alert"> *</span>
          </label>
          <%= f.email_field :email, autofocus: true, autocomplete: t(".email"),
            class:"form-control" %>
          <div align="right" class="error-messages-devise" >
            <%= @user.errors.full_messages_for(:email).first %>
          </div>
        </div>

        <div class="field form-group">
          <label><%= t(".password") %>
            <span class="validate-alert"> *</span>
          </label>
          <%= f.password_field :password, autocomplete: t(".password"), class:"form-control" %>
          <div align="right" class="error-messages-devise" >
            <%= resource.errors.full_messages_for(:password).first %>
          </div>
        </div>

        <div class="field form-group">
          <label><%= t(".password_confirmation") %>
            <span class="validate-alert"> *</span>
          </label>
          <%= f.password_field :password_confirmation, autocomplete: t(".new-password"), class:"form-control" %>
          <div align="right" class="error-messages-devise" >
            <%= resource.errors.full_messages_for(:password_confirmation).first %>
          </div>
        </div>

        <div class="form-group">
          <label><%= t(".name") %>
            <span class="validate-alert"> *</span>
          </label>
          <%= f.text_field :name, autofocus: true, autocomplete: t(".name"),
            class:"form-control"  %>
          <div align="right" class="error-messages-devise" >
            <%= @user.errors.full_messages_for(:name).first %>
          </div>
        </div>

        <div class="form-group">
          <label><%= t(".phone") %>
            <span class="validate-alert"> *</span>
          </label>
          <%= f.text_field :phone, autofocus: true, autocomplete: t(".phone"), class:"form-control" %>
          <div align="right" class="error-messages-devise" >
            <%= @user.errors.full_messages_for(:phone).first %>
          </div>
        </div>

        <div class="form-group">
          <label><%= t(".address") %>
            <span class="validate-alert"> *</span>
          </label>
          <%= f.text_field :address, autofocus: true, autocomplete: t(".address"), class:"form-control" %>
          <div align="right" class="error-messages-devise" >
            <%= @user.errors.full_messages_for(:address).first %>
          </div>
        </div>

        <div class="field form-group">
          <div class="fix-bot-pic upload-pic pic-profile">
            <%= f.hidden_field :avatar_cache %>
            <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png",
              autofocus: true, class: "input-file previewIMG" %>
            <label tabindex="0" class="input-file-trigger"> <%= t ".avatar" %>
              <i class="fa fa-camera"></i>
            </label>
          </div>
          <%= image_tag get_avatar(resource), class: "image_cm preview-img" %>
          <div align="right" class="error-messages-devise" >
            <%= resource.errors.full_messages_for(:avatar).first %>
          </div>
        </div>

        <div class="actions form-group">
          <%= f.submit t(".sign_up"), class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
