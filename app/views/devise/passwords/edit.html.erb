<div class="content-wrapper">
  <h3><%= t ".change_password" %></h3>
  <div class="row">
    <div class="login-form col-md-4 offset-md-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group">
          <%= f.label :password, t(".new_password") %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
          <div align="right" class="error-messages-devise" >
            <%= resource.errors.full_messages_for(:password).first %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, t(".confirm_new_password") %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
          <div align="right" class="error-messages-devise" >
            <%= resource.errors.full_messages_for(:password_confirmation).first %>
          </div>
        </div>

        <div class="actions form-group">
          <%= f.submit t(".change_password"), class:"btn btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
