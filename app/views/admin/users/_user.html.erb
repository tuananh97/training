<% @users.each_with_index do |user, index| %>
  <tr>
    <td><%= page_index params[:page], index, 10 %></td>
    <td><%= user.name %></td>
    <td><p><%= user.email %></p></td>
    <td><p><%= user.address %></p></td>
    <td><%= t "enum.user.role.#{user.role}" %></td>
    <% if current_user.admin? %>
      <td colspan="3" class="text-center">
        <%= link_to edit_admin_user_path(user) do %>
          <i class="fa fa-pencil-square-o data-toogle="tooltip"
            title="<%= t '.edit' %>""></i>
        <% end %>&nbsp;
        <%= link_to admin_user_path(user), method: :delete,
          data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash-o data-toogle="tooltip"
            title="<%= t '.delete' %>""></i>
        <% end %>&nbsp;
        <%= link_to user_path(user) do %>
          <i class="fa fa-book" data-toogle="tooltip"
            title="<%= t '.view' %>"></i>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
