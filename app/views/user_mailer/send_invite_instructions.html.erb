<p><%= t "user.mailer.send" %> <%= @user.name %></p>
<% if @user.trainee? %>
<p><%= t "user.mailer.create_trainee" %></p>
<% elsif @user.supervisor? %>
<p><%= t "user.mailer.create_supervisor" %></p>
<% end %>
<p><%= t "user.mailer.create_by_admin" %></p>
<p><b><%= t "user.mailer.email" %></b> <%= @user.email %></p>
<p><b><%= t "user.mailer.password" %></b> <%= @user.password %></p>
<p><%= t "user.mailer.link" %> <%= link_to "Training Online System", new_user_session_url %></p>
<p><%= t "user.mailer.change_pass" %></p>
