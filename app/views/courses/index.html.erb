
<div class="content-wrapper">
  <div class="row justify-content-center search-form">
    <%= search_form_for @q do |f| %>
      <div class="inner-form">
        <div class="input-field first-wrap">
          <%= f.search_field :name_cont, id:"search", placeholder:"What are you looking for?" %>
        </div>
        <div class="input-field third-wrap">
          <%= f.submit "Search", class:"btn-search" %>
        </div>
      </div>
    <% end %>
  </div>
  <br><br>
  <div class="row" id="courses">
    <% @courses.each do |course| %>
      <div class="col-md-3 card-size">
        <div class="card">
          <%= image_tag get_image(course), class:"card-img-top", tyle:"width:100%" %>
          <div class="card-body">
            <h3 class="title-course"><%= course.name %></h3>
            <span class="short-description"><%= course.description %></span>
          </div>
        </div>
        <div class="card-footer text-center">
          <%= link_to t(".view_details"), course_path(course), class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>

  </div>
  <div class="d-flex justify-content-center" id="paginator">
    <%= paginate @courses, theme: "twitter-bootstrap-4", remote: true %>
  </div>
</div>
