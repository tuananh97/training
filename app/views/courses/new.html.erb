<div class="col-md-2 card-size">
  <div class="card">
    <%= image_tag get_image(@course), class:"card-img-top", tyle:"width:100%" %>
    <div class="card-body">
      <h3 class="title-course"><%= @course.name %></h3>
      <span class="short-description"><%= @course.description %></span>
    </div>
    <div class="card-footer text-center">
      <%= form_for :user_course do |f| %>
        <%= hidden_field_tag :user_id, current_user.id %>
        <%= hidden_field_tag :course_id, @course.id %>
        <%= f.submit "Enroll", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
